using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Threading;

namespace ThreadPoolClass
{
    class Start
    {
        static void Main(string[] args)
        {
            try
            {
                //TokenParser testParser = new TokenParser();
                const int _threadAmount = 3;
                TPool _threadPool = new TPool(_threadAmount, null);
                //ThreadPool.QueueUserWorkItem(new WaitCallback());
                Console.WriteLine("launching {0} tasks...", _threadAmount);
                _threadPool.AllocateLineToThread();

            }
            catch (Exception e)
            {
                Console.WriteLine("THROWN EXCEPTION!!!!");
                Console.WriteLine(e.StackTrace);
            }
        }
    }
}
