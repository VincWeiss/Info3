from pip._vendor.distlib.compat import raw_input
from Buffer import Buffer
from Producer import Producer
import threading
from fileinput import DEFAULT_BUFSIZE

pcpBuffer = Buffer(DEFAULT_BUFSIZE)

class TestClass:
    
    
    def main():  # @NoSelf
        
        buffersize = int(input("Enter buffer length: "))
        print("your buffer has a size of : " + str(buffersize))
        producerAmount = int(input("Enter amount of Producer: "))
        print("your amount of Producer : " + str(producerAmount))
        
        index = 0
        nameProd = producerAmount
        pcpBuffer = Buffer(buffersize)
        
        while index < buffersize:
            p1Thread = threading.Thread(name='Producer' + str(nameProd), target = Producer.runProducer(index))
            p1Thread.start()
            print(pcpBuffer)
            nameProd -= 1
            index += 1
        
    if __name__ == "main":
        main()
        
    main()       
    
    
