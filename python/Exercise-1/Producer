from Buffer import Buffer
from random import randint
import threading


class Producer(threading.Thread):
    
    def __init__(self, index):
        self.index = index
    
    def generateRandomNumb():  # @NoSelf
        randomNumber = randint(1,100)
        return randomNumber
    
    def putToBuffer(self, index):
        self.pcpBuffer.addObject(Producer.generateRandomNumb(), index)
    
    def runProducer(index):  # @NoSelf
        print("Thread Producer started")
        print("the parameter index : " + str(index))
        p1 = Producer(index)
        p1.putToBuffer(index)   
